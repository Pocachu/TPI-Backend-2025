<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    
    <persistence-unit name="TipicosPU" transaction-type="JTA">
        <jta-data-source>jdbc/tipicosDB</jta-data-source>
        
        <!-- Entidades mapeadas -->
        <class>com.tuempresa.tipicos.entity.Producto</class>
        <class>com.tuempresa.tipicos.entity.TipoProducto</class>
        <class>com.tuempresa.tipicos.entity.ProductoDetalle</class>
        <class>com.tuempresa.tipicos.entity.ProductoPrecio</class>
        <class>com.tuempresa.tipicos.entity.Combo</class>
        <class>com.tuempresa.tipicos.entity.ComboDetalle</class>
        <class>com.tuempresa.tipicos.entity.Orden</class>
        <class>com.tuempresa.tipicos.entity.OrdenDetalle</class>
        <class>com.tuempresa.tipicos.entity.Pago</class>
        <class>com.tuempresa.tipicos.entity.PagoDetalle</class>
        
        <properties>
            <!-- Propiedades de Hibernate -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            
            <!-- Solo para desarrollo - no usar en producciÃ³n -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
    
</persistence>
